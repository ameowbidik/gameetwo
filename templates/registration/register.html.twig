{% extends 'base.html.twig' %}

{% block title %}
Inscription - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/component/form.css') }}">
{% endblock %}

{% block body %}
    
    {{ form_start(registrationForm) }}
        <div class="container-md">
            <h1 class="text-center">
                Inscription
            </h1>
                {{ form_row(registrationForm.nickname) }}
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.lastname) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.birthdate) }}
                {{ form_row(registrationForm.password, {label: 'Password'}) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <button type="submit" class="button">M'inscrire</button>
        </div>
    {{ form_end(registrationForm) }}

{% endblock %}
