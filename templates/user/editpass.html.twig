{% extends 'user/user.html.twig' %}

{% block title %}Mon profil
{% endblock %}

{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="{{ asset('css/user/profil.css') }}">
{% endblock %}

{% block body %}
	<div class="container">
		{% for message in app.flashes('error') %}
			<div class="alert alert-warning" role="alert">
				{{ message }}
			</div>
		{% endfor %}
		<div class="col">
			<h1>Modification du Mot de passe de :
				{{ app.user.nickname }}</h1>
		</div>
		<form method="post">
				<label for="pass">Mot de passe</span>
				<input type="password" id="pass" name="pass" placeholder="Nouveau mot de passe">
				<label for="pass2">Confirmez le mot de passe</span>
				<input type="password" id="pass2" name="pass2" placeholder="Confirmez le nouveau mot de passe">
			<button class="btn btn-outline-secondary" id="button-addon2">Valider</button>
		</form>
	</div>
{% endblock %}
